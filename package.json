{
  "name": "@daracl/toast",
  "version": "0.0.10",
  "sideEffects": [
    "src/global.ts",
    "*.scss"
  ],
  "description": "Daracl Toast Message",
  "author": {
    "name": "darainfo",
    "email": "info@daracl.com",
    "url": "https://www.moaview.com"
  },
  "license": "MIT",
  "keywords": [
    "@daracl/toast",
    "daracl-toast",
    "toast",
    "darainfo",
    "message",
    "notification",
    "javascript"
  ],
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.js",
  "homepage": "https://github.com/darainfo/daracl.toast",
  "bugs": {
    "url": "https://github.com/darainfo/daracl.toast/issues",
    "email": "darainfosys@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/darainfo/daracl.toast.git"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./umd": {
      "import": "./dist/daracl.toast.umd.js"
    },
    "./dist/": "./dist/",
    "./style/": "./style/"
  },
  "files": [
    "dist",
    "style"
  ],
  "peerDependencies": {
    "@daracl/core": "^0.0.3"
  },
  "dependencies": {
    "@daracl/core": "^0.0.3",
    "esbuild": "^0.18.11",
    "typescript": "^5.1.6"
  },
  "prettier": {
    "printWidth": 256,
    "useTabs": false,
    "tabWidth": 2,
    "bracketSpacing": true,
    "semi": true,
    "singleQuote": false
  },
  "editor.formatOnSave": true,
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "^20.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.5",
    "@typescript-eslint/parser": "^5.59.5",
    "babel-loader": "^8.3.0",
    "babel-plugin-dynamic-import-webpack": "^1.1.0",
    "babel-plugin-lodash": "^3.3.4",
    "cpx": "^1.5.0",
    "css-loader": "^6.8.1",
    "css-minimizer-webpack-plugin": "^5.0.1",
    "eslint": "^8.40.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.0.0",
    "mini-css-extract-plugin": "^2.7.6",
    "prettier": "^2.8.8",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "sass": "^1.80.2",
    "ts-node": "^10.9.1",
    "vite": "^5.4.0",
    "vite-plugin-banner": "^0.7.1"
  },
  "scripts": {
    "prepack": "yarn build",
    "build": "vite build --mode production && vite build --mode development && yarn copy-dts && yarn build:tsc && yarn copy-unmin && yarn clean:unmin && yarn copy-html",
    "build:tsc": "tsc --emitDeclarationOnly",
    "dev": "vite",
    "preview": "vite preview",
    "docs:gen": "typedoc --tsconfig tsconfig.doc.json",
    "dts:gen": "tsc src/index.ts --declaration --emitDeclarationOnly --outDir dist",
    "test": "jest",
    "pwtest": "playwright test",
    "clean:unmin": "rimraf dist/unmin",
    "copy-html": "cpx \"public/index.html\" dist",
    "copy-unmin": "cpx \"dist/unmin/**.*\" dist",
    "copy-dts": "cpx \"src/**/*.d.ts\" dist"
  },
  "browserslist": {
    "production": [
      "ie 11",
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "ie 11",
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
